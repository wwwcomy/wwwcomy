		<field name="CATALOG" description="可访问" javaType="string" displayOnly="true" mappingTable="SYSCATAROLEMAP">
			<component type="richSelect" className="haiyan.component.TreeFieldCCNodeComponent" multipleSelect="true" referenceTable="SYSCATALOG" displayReferenceField="NAME" colspan="3"/>
			<queryCondition type="none"/>
			<listColumn noquery="true"/>
		</field>
		<!--
		<field name="DATALEVEL" description="数据等级" javaType="string">
			<component type="hidden"/>
		</field>
		-->
		<field name="PID" description="上级角色" javaType="string">
			<component type="richSelect" className="haiyan.component.TreeFieldComponent" quickQueryConditionField="NAME" referenceTable="SYSROLE" displayReferenceField="NAME"/>
		</field>
		<field name="HEADID" description="HEADID" javaType="string">
			<component type="hidden" />
		</field>
		<field name="TYPE" javaType="string" description="包含方式" defaultValue="0">
			<component type="dropdown" url="#"><!-- type="userDefined" className="haiyan.component.RadioComponent" -->
				<option displayName="独立" value="0"/>
				<option displayName="继承上级" value="1"/>
				<option displayName="继承所有" value="2"/>
			</component>
			<queryCondition type="none"/>
			<listColumn noquery="true"/>
		</field>
		<field name="HYVERSION" javaType="string" description="HYVERSION">
			<component type="hidden"/>
		</field>
		<field name="SUBGRID" javaType="string" description="所属用户" displayOnly="true">
			<component type="grid" referenceField="ROLEID" referenceTable="SYSUSERROLE" parameter="{&amp;ROLEID=}&amp;If(IsEmpty(Get(ID)),-1,Get(ID))" readOnly="true" style="width:520;height:160;toolbar:no;" colspan="4"/>
			<queryCondition type="none"/>
			<listColumn noquery="true"/>
		</field>
		<PageView showField="NAME,CODE" type="gentree" title="树形索引"/>
		<PageView showField="*" type="querybyform" title="列表索引"/>
		<pluginInterceptor className="haiyan.interceptor.SaveInterceptor" methodName="complete" pluginName="save" type="after"/>
		<pluginInterceptor className="haiyan.interceptor.DeleteInterceptor" methodName="complete" pluginName="delete" type="after"/>
		<!--
		<role name="admin">
			<roleOperation name="delete"/>
		</role>
