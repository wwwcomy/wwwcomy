	<property name="destCMCCFolder" value="\\1.1.2.28\Tomcat5.0\webapps\cmcc\"/>
	<property name="destCMCCBinFolder" value="\\1.1.2.28\Tomcat5.0\webapps\cmcc\bin\"/>
